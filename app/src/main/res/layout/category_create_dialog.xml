        app:layout_constraintTop_toBottomOf="@+id/category_name" />

    <TextView
        android:id="@+id/color_choose_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_textview_rounded_corners"
        android:backgroundTint="@color/blue_light"
        app:layout_constraintBottom_toBottomOf="@+id/choose_color_TV"
        app:layout_constraintEnd_toEndOf="@+id/category_name"
        app:layout_constraintStart_toEndOf="@+id/choose_color_TV"
        app:layout_constraintTop_toBottomOf="@+id/category_name" />

